<ul>
  <% @list.errors.full_messages.each do |error| %>
    <li><%= error %></li>
  <% end %>
</ul>

<h2>Update your list's name</h2>

<form action="/lists/<%= @list.id%>/edit" method="post">
  <input type="hidden" name="_method" value="patch">

  <label for="list_name">Name</label>
  <input id="list_name" type="text" name="list[name]" value="<%= @list.name %>">


  <input type="submit" value="Update">
</form>
