<% @item.errors.full_messages.each do |error| %>
  <h3><%= error.upcase %> DINGUS</h3>
<% end %>

<a href="/lists/<%= @list.id %>">Go to <%= @list.name%></a>
<h4>Update your item's name, due date, or comments</h4>

<form action="/items/<%= @item.id%>/edit" method="post">
  <input type="hidden" name="_method" value="patch">

  <label for="item_name">Name</label>
  <input id="item_name" type="text" name="item[name]" value="<%= @item.name %>">

  <label for="item_due_date">Due Date</label>
  <input id="item_due_date" type="date" name="item[due_date]" value="<%= @item.due_date %>">

  <label for="item_comments">Comments</label>
  <input id="item_comments" type="text" name="item[comments]" value="<%= @item.comments %>">

  <input class="btn btn-default btn-xs" type="submit" value="Update">
</form>
